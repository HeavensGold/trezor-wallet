<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AccountBalanceItemTitle" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/textSecondary</item>
    </style>

    <style name="AccountBalanceItemValuePrimary" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AccountBalanceItemValueSecondary" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/textSecondary</item>
    </style>

    <style name="AccentButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:paddingStart">@dimen/button_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/button_padding_horizontal</item>
        <item name="android:drawablePadding">@dimen/button_padding_drawable</item>
        <item name="android:layout_height">52dp</item>
    </style>
</resources>
